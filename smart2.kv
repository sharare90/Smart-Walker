#:kivy 1.9.0

<SmartWalker>

    AnchorLayout:
        RelativeLayout:
            id:fl
            anchor_x: left
            anchor_y: top
            canvas:
                Ellipse:
                    pos:fl.x, fl.y
        RelativeLayout:
            id:rl
            anchor_x: left
            anchor_y: bottom
            canvas:
                Ellipse:
                    pos:root.x, root.top-100
        RelativeLayout:
            id:gyroscope
            anchor_x: center
            anchor_y: center
            canvas:
                Ellipse:
                    size:200, 200
        RelativeLayout:
            id:top
            anchor_x: center
            anchor_y: top
            canvas:
                Rectangle:
                    size:800, 10

        RelativeLayout:
            canvas:
                Ellipse:
                    id:fr
                    pos:root.x + 700, root.top-100
        RelativeLayout:
            canvas:
                Ellipse:
                    id:rr
                    pos:root.x + 700, root.y
                 Rectangle:
                    id:left
                    pos:root.x + 100, root.top - 600
                    size:10, 600
                Rectangle:
                    id:right
                    pos:root.x + 690, root.top - 600
                    size:10, 600
                 Rectangle:
                    id:down
                    pos:root.x, root.top - 500
                    size:800, 10
        RelativeLayout:
            canvas:
                Color:
                    rgba:0,0,1,1
                Ellipse:
                    id:inner_gy
                    size:20, 20
                    pos:root.x + 390, root.top - 210
        Label:
            id: proximity
            text:"Proximity"
            color:0,0,1,1
            pos:root.x + 350, root.top - 450












































