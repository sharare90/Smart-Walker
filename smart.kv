#:kivy 1.8.0


<StandardPressureSensorWidget@PressureSensorWidget>
    Label:
        canvas:
            Color:
                rgba: root.mean_circle_color
            Ellipse:
                pos: root.center_x - root.mean_radius, root.center_y - root.mean_radius
                size: 2 * root.mean_radius, 2 * root.mean_radius

    Label:
        canvas:
            Color:
                rgba: root.dr_circle_color
            Ellipse:
                pos: root.center_x - root.dr_radius, root.center_y - root.dr_radius
                size: 2 * root.dr_radius, 2 * root.dr_radius

    Label:
        canvas:
            Color:
                rgba: root.patient_circle_color
            Line:
                width: 1
                ellipse:
                    (
                    root.center_x - root.patient_radius,
                    root.center_y - root.patient_radius,
                    2 * root.patient_radius,
                    2 * root.patient_radius,
                    0,
                    360,
                    20
                    )

<SmartWalker>
    fl: fl
    fr: fr
    rl: rl
    rr: rr
    proximity: proximity

    canvas.before:
        Color:
            rgba: 0.282, 0.239, 0.545, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id:time
        text: root.time
        bold: True
        font_size: 30
        pos:root.width / 2 - 50, root.height * 4 / 5
        color: 1, 0.647, 0, 1

    Label:
        id: top_line
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                id:top
                pos:root.x, root.top * 4 / 5
                size:root.width, 10

    StandardPressureSensorWidget:
        id: fl
        pos: root.width / 4, root.top * 8 / 15

    StandardPressureSensorWidget:
        id: fr
        pos: root.width * 3 / 4 - fr.width, root.top * 8 / 15

    StandardPressureSensorWidget:
        id: rl
        pos: root.width / 4, root.top * 1 / 5

    StandardPressureSensorWidget:
        id: rr
        pos: root.width * 3 / 4 - rr.width, root.top * 1 / 5

    ProximityWidget:
        id: proximity
        pos: 20, root.center_y / 3
        size: 40, 300

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: proximity.center_x - proximity.width / 2, proximity.center_y - proximity.height / 2,
                size: proximity.width, proximity.height

    Label:
        canvas:
            Color:
                rgba: proximity.color
            Line:
                width: 2
                rectangle:
                    (
                    proximity.center_x - proximity.width / 2,
                    proximity.center_y - proximity.height / 2,
                    proximity.width,
                    proximity.height
                    )

    RelativeLayout:
        id: gyro
        pos: 0, -1 * root.top * 2 / 5

        Label:
            canvas:
                Color:
                    rgba: root.forward_arrow_color
                Rectangle:
                    pos: root.width / 2 - 2 * root.arrow_width, root.height / 2 + 10
                    size: 4 * root.arrow_width, 4 * root.arrow_height
                Triangle:
                    points:
                        [
                        root.width / 2 - 3 * root.arrow_width, root.height / 2 + 10 + 4 * root.arrow_height,
                        root.width / 2, root.height / 2 + 10 + 6 * root.arrow_height,
                        root.width / 2 + 3 * root.arrow_width, root.height / 2 + 10 + 4 * root.arrow_height
                        ]

        Label:
            canvas:
                Color:
                    rgba: root.backward_arrow_color
                Rectangle:
                    pos: root.width / 2 - 2 * root.arrow_width, root.height / 2 - 10
                    size: 4 * root.arrow_width, -4 * root.arrow_height
                Triangle:
                    points:
                        [
                        root.width / 2 - 3 * root.arrow_width, root.height / 2 - 10 - 4 * root.arrow_height,
                        root.width / 2, root.height / 2 - 10 - 6 * root.arrow_height,
                        root.width / 2 + 3 * root.arrow_width, root.height / 2 - 10 - 4 * root.arrow_height
                        ]

        Label:
            canvas:
                Color:
                    rgba: root.right_arrow_color
                Rectangle:
                    pos: root.width / 2 + 10, root.height / 2 - 2 * root.arrow_width
                    size: 4 * root.arrow_height, 4 * root.arrow_width
                Triangle:
                    points:
                        [
                        root.width / 2 + 10 + 4 * root.arrow_height, root.height / 2 + 3 * root.arrow_width,
                        root.width / 2 + 10 + 6 * root.arrow_height, root.height / 2,
                        root.width / 2 + 10 + 4 * root.arrow_height, root.height / 2 - 3 * root.arrow_width
                        ]

        Label:
            canvas:
                Color:
                    rgba: root.left_arrow_color
                Rectangle:
                    pos: root.width / 2 - 10, root.height / 2 - 2 * root.arrow_width
                    size: -4 * root.arrow_height, 4 * root.arrow_width
                Triangle:
                    points:
                        [
                        root.width / 2 - 10 - 4 * root.arrow_height, root.height / 2 + 3 * root.arrow_width,
                        root.width / 2 - 10 - 6 * root.arrow_height, root.height / 2,
                        root.width / 2 - 10 - 4 * root.arrow_height, root.height / 2 - 3 * root.arrow_width
                        ]
