#:kivy 1.9.0

<SmartWalker>
    front_left_leg: fl
    front_right_leg: fr
    rear_right_leg: rr
    rear_left_leg: rl
    Button:
        id:fl
        pos:root.x, root.top - 100
        size:100, 100
        on_press: root.change_color(fl)
        canvas:
            Color:
                rgba: root.ellipse_color_fl
            Ellipse:
                pos:root.x, root.top - 100

    Button:
        id:rl
        pos:root.x, root.y
        on_press: root.change_color(rl)
        canvas:
            Color:
                rgba: root.ellipse_color_rl
            Ellipse:
                pos:root.x, root.y

    Button:
        id:fr
        pos:root.width - 100, root.height - 100
        on_press: root.change_color(fr)
        canvas:
            Color:
                rgba: root.ellipse_color_fr
            Ellipse:
                pos:root.width - 100, root.height - 100
    Button:
        id:rr
        pos:root.width - 100, root.y
        on_press: root.change_color(rr)
        canvas:
            Color:
                rgba: root.ellipse_color_rr
            Ellipse:
                pos:root.width - 100, root.y
    Label:
        id:gyroscope
        canvas:
            Color:
                rgba: root.ellipse_color_gy
            Ellipse:
                size:200, 200
                pos:root.width / 2 - 100, root.height / 2 - 100
    RelativeLayout:
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                id:top
                pos:root.x, root.top - 110
                size:root.width, 10
            Rectangle:
                id:left
                pos:root.x + 100, root.top - 600
                size:10, 600
            Rectangle:
                id:right
                pos:root.x + 690, root.top - 600
                size:10, 600
            Rectangle:
                id:down
                pos:root.x, root.top - 500
                size:root.width, 10
    Label:
        id:inner_gy
        canvas:
            Color:
                rgba:0,0,1,1
            Ellipse:
                size:20, 20
                pos:root.width / 2 - 10, root.height / 2 - 10
    Label:
        id: proximity
        text:"Proximity"
        color:0,0,1,1
        pos:root.width * 10.5 / 24, root.height / 5












































