#:kivy 1.8.0

<SmartWalker>
    front_left_leg: fl
    front_right_leg: fr
    rear_right_leg: rr
    rear_left_leg: rl
    timer: t
    Label:
        id:fl
        size:100, 100
        pos:root.x, root.top - 100
        #on_press: root.change_color(fl)
        text: root.fl_text
        color:root.ellipse_color_fl
        bold: True
        font_size: 40
        #canvas:
        #    Color:
        #        rgba: root.ellipse_color_fl
        #    Ellipse:
        #        pos:root.x, root.top - fl.width

    Label:
        id:rl
        pos:root.x, root.y
        #on_press: root.change_color(rl)
        text: root.rl_text
        color: root.ellipse_color_rl
        bold: True
        font_size: 40
        #canvas:
        #    Color:
        #        rgba: root.ellipse_color_rl
        #    Ellipse:
        #        pos:root.x, root.y

    Label:
        id:fr
        pos:root.width - fr.width, root.height - fr.height
        #on_press: root.change_color(fr)
        text: root.fr_text
        color: root.ellipse_color_fr
        bold: True
        font_size: 40
        #canvas:
        #    Color:
        #        rgba: root.ellipse_color_fr
        #    Ellipse:
        #        pos:root.width - 100, root.height - 100
    Label:
        id:rr
        pos:root.width - 100, root.y
        #on_press: root.change_color(rr)
        text: root.rr_text
        color: root.ellipse_color_rr
        bold: True
        font_size: 40
        #canvas:
        #   Color:
        #       rgba: root.ellipse_color_rr
        #   Ellipse:
        #       pos:root.width - 100, root.y
    Label:
        id:gyroscope
        pos:root.width / 2 - 100, root.height / 2 - 100
        text: 'Heading:' + root.bno_heading + ',\n Rolling:' + root.bno_roll + ',\n Pitching:' + root.bno_pitch
        color: root.ellipse_color_gy
        bold: True
        font_size: 20

        #canvas:
        #    Color:
        #        rgba: root.ellipse_color_gy
        #    Ellipse:
        #        size:200, 200
        #        pos:root.width / 2 - 100, root.height / 2 - 100
    Label:
        id:t
        text: root.thisTime
        bold: True
        font_size: 30
        pos:root.width / 2 - 50 , root.height * 4 / 5
        color:0,0,1,1


    RelativeLayout:
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                id:top
                pos:root.x, root.top - 110
                size:root.width, 10
            Rectangle:
                id:left
                pos:root.x + 100, root.top - 600
                size:10, 600
            Rectangle:
                id:right
                pos:root.x + 690, root.top - 600
                size:10, 600
            Rectangle:
                id:down
                pos:root.x, root.top - root.height + 100
                size:root.width, 10
    #Label:
    #    id:inner_gy
    #    canvas:
    #        Color:
    #            rgba:0,0,1,1
    #        Ellipse:
    #            size:20, 20
    #            pos:root.width / 2 - 10, root.height / 2 - 10
    Label:
        id: proximity
        text:"Proximity"
        color:0,0,1,1
        pos:root.width * 10.5 / 24, root.height / 5












































